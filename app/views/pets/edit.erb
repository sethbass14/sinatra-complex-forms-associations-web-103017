<h1>Update Pet</h1>

<br></br>

<form action="/pets/<%= @pet.id %>" method="post">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name"></input>

  <br></br>

  <label>Owner:</label>

  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"<%= 'checked' if @pet.owner == owner %>> <%= owner.name %></input>
  <% end %>

  <br></br>

  <label>and/or, create a new owner:</label>

  <br></br>

  <label>Name: </label>

  <br></br>

  <input type="text" name="owner[name]" id="owner_name"></input>

  <input type="submit" name="submit" value="Update Pet">

</form>
